            },
            {
              "type": "string",
              "format": "date"
            },
            {
              "type": "integer",
              "format": "unix-time"
            }
          ]
        },
        "tags": {
          "type": "array",
          "items": {
            "type": "string",
            "enum": [
              "fichiers",
              "gestion",
              "programming",
              "open-source",
              "swift",
              "javascript",
              "nodejs"
            ]
          }
        },
        "redirectUrl": {
          "type": "string",
          "format": "uri"
        },
        "$schema": {
          "type": "string"
        }
      },
